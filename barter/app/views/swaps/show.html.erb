<% title(@swap.name, "Swaps") %>

<title>
  <% if content_for?(:title) %>
    <%= yield(:title) %>
  <% else %>
    Barter
  <% end %>
</title>

<header>
  <h1><%= @swap.name %></h1>
  <p>Created by <b><%= @swap.swapper_name %></b></p>
  <p><%= @swap.description %></p>
  <ul class="actions">
    <% if @swap.swapper_id == current_user.id %>
    <li><%= link_to "Edit Swap", edit_swap_path(@swap),
    class: "edit" %></li>
    <li><%= link_to "Delete Swap", swap_path(@swap),
     method: :delete,
     data: { confirm: "Are you sure you want to delete this swap?" },
     class: "delete" %></li>
     <% end %>
  </ul>
</header>

<header>
  <h2>Barts</h2>
  <ul class="actions">
    <li><%= link_to "New Bart", new_swap_bart_path(@swap),
      class: "new" %></li>
  </ul>
</header>

<ul id="barts">
  <% @swap.barts.each do |bart| %>
    <li>
      <%= link_to bart.name, [@swap, bart] %>
      <span id="author">Created by <b><%= bart.user.name %></b> contact:<b><%= bart.user.email %></b></span>

  <%= simple_form_for(@swap) do %>
    <%= hidden_field(:swap, :barter_id, :value => bart.user.id) %>
    <%= submit_tag("Search") %>
  <% end %>

    <%= link_to "Accept help", {:controller => "swaps", :action => "update", :barter_id => bart.user.id }%>

    </li>
  <% end %>
</ul>