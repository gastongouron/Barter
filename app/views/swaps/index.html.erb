<header>
  <h1>Swaps</h1>
    <ul class="actions">
      <li>
        <% if current_user %>
        <%= link_to "New Swap", new_swap_path, class: "new" %>
        <% end %>
      </li>
    </ul>
</header>

<div id="swaps">
  <% @swaps.each do |swap| %>
    <h2><%= link_to swap.name, swap %> created by <b><%= swap.swapper_name %></b></h2>
    <p><%= swap.description %></p>
  <% end %>
</div>
